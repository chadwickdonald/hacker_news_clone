<%= form_for @new_link do |f| %>

    <% if @new_link.errors.any? %>
      <div class="control-group" id="error_explanation">
        <% @new_link.errors.full_messages.each do |msg| %>
          <div class="alert alert-error"><%= msg %></div>
        <% end %>
      </div>
    <% end %>


    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :url %>
    <%= f.text_field :url , :value => "http://" %><br/>

    <%= f.submit 'Save'%>

<% end %>